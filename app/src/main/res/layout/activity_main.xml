<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_root"
    android:background="@drawable/background"
    >

    <TextView
        android:id="@+id/main_tv_area"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:textColor="@color/text_green"
        android:textSize="24dp"
        android:textStyle="bold"
        android:gravity="center|top"
        android:maxLength="50"
        android:text="学员区（含服化区）"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/iv_decorate_left"
        app:layout_constraintWidth_percent="1"
        app:layout_constraintHeight_percent="0.07"
        app:layout_constraintVertical_bias="0.000"
        />

    <ImageView
        android:visibility="invisible"
        android:id="@+id/iv_head"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        app:layout_constraintWidth_percent="0.33"
        app:layout_constraintHeight_percent="0.23"
        app:layout_constraintStart_toEndOf="@+id/iv_decorate_left"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.17"
        />

    <TextView
        android:visibility="invisible"
        android:id="@+id/main_tv_name"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:textColor="@color/bg_black"
        android:background="@color/bg_white"
        android:textSize="26dp"
        android:textStyle="bold"
        android:gravity="center"
        android:maxLength="50"
        app:layout_constraintWidth_percent="0.6"
        app:layout_constraintHeight_percent="0.055"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/iv_head"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.46"
        />

    <ImageView
        android:visibility="invisible"
        android:id="@+id/main_tv_name_right"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/smile"
        app:layout_constraintHeight_percent="0.03"
        app:layout_constraintLeft_toRightOf="@+id/main_tv_name"
        app:layout_constraintBottom_toBottomOf="@+id/main_tv_name"
        app:layout_constraintTop_toTopOf="@+id/main_tv_name"
        app:layout_constraintRight_toRightOf="parent"
        />

    <TextView
        android:visibility="invisible"
        android:id="@+id/main_tv_ename"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:textColor="@color/bg_black"
        android:background="@color/bg_white"
        android:textSize="26dp"
        android:textStyle="bold"
        android:gravity="center"
        android:maxLength="50"
        app:layout_constraintWidth_percent="0.6"
        app:layout_constraintHeight_percent="0.055"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/iv_head"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintVertical_bias="0.54"
        />

    <ImageView
        android:visibility="invisible"
        android:id="@+id/main_tv_ename_right"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/smile"
        app:layout_constraintHeight_percent="0.03"
        app:layout_constraintLeft_toRightOf="@+id/main_tv_ename"
        app:layout_constraintBottom_toBottomOf="@+id/main_tv_ename"
        app:layout_constraintTop_toTopOf="@+id/main_tv_ename"
        app:layout_constraintRight_toRightOf="parent"
        />

    <TextView
        android:visibility="invisible"
        android:id="@+id/main_tv_group"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:textColor="@color/bg_black"
        android:background="@color/bg_white"
        android:textSize="26dp"
        android:textStyle="bold"
        android:gravity="center"
        app:layout_constraintWidth_percent="0.6"
        app:layout_constraintHeight_percent="0.055"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/iv_head"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintVertical_bias="0.62"
        />

    <ImageView
        android:visibility="invisible"
        android:id="@+id/main_tv_group_right"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/smile"
        app:layout_constraintHeight_percent="0.03"
        app:layout_constraintLeft_toRightOf="@+id/main_tv_group"
        app:layout_constraintBottom_toBottomOf="@+id/main_tv_group"
        app:layout_constraintTop_toTopOf="@+id/main_tv_group"
        app:layout_constraintRight_toRightOf="parent"
        />

    <TextView
        android:visibility="invisible"
        android:id="@+id/main_tv_companytitle"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:textColor="@color/bg_black"
        android:background="@color/bg_white"
        android:textSize="26dp"
        android:textStyle="bold"
        android:gravity="center"
        app:layout_constraintWidth_percent="0.6"
        app:layout_constraintHeight_percent="0.055"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/iv_head"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintVertical_bias="0.70"
        />

    <ImageView
        android:visibility="invisible"
        android:id="@+id/main_tv_companytitle_right"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/smile"
        app:layout_constraintHeight_percent="0.03"
        app:layout_constraintLeft_toRightOf="@+id/main_tv_companytitle"
        app:layout_constraintBottom_toBottomOf="@+id/main_tv_companytitle"
        app:layout_constraintTop_toTopOf="@+id/main_tv_companytitle"
        app:layout_constraintRight_toRightOf="parent"
        />

    <TextView
        android:id="@+id/main_tv_timeorpermission"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:textColor="@color/bg_white"
        android:textSize="16dp"
        android:textStyle="bold"
        android:gravity="center"
        app:layout_constraintWidth_percent="0.6"
        app:layout_constraintHeight_percent="0.08"
        app:layout_constraintStart_toStartOf="@+id/iv_head"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintVertical_bias="0.78"
        />

    <ImageView
        android:visibility="invisible"
        android:id="@+id/iv_success"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:padding="5dp"
        android:src="@drawable/success"
        android:layout_gravity="center"
        app:layout_constraintWidth_percent="0.2"
        app:layout_constraintHeight_percent="0.12"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.91"
        />

    <ImageView
        android:id="@+id/iv_fail"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:src="@drawable/error"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHeight_percent="0.12"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.2"
        app:layout_constraintVertical_bias="0.91"/>

    <TextView
        android:visibility="invisible"
        android:id="@+id/main_tv_permissionfail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/bg_white"
        android:textSize="16dp"
        android:textStyle="bold"
        android:gravity="center"
        android:text="@string/permissionfail"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_success"
        />

    <TextView
        android:id="@+id/main_tv_init_left"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:textColor="@color/bg_white"
        android:textSize="40dp"
        android:textStyle="bold"
        android:gravity="center"
        android:maxLength="50"
        android:text="@string/scan_card"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="1"
        app:layout_constraintHeight_percent="0.1"
        app:layout_constraintHorizontal_bias="0.02"
        app:layout_constraintVertical_bias="0.65"
        />

    <ImageView
        android:id="@+id/iv_init"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:padding="5dp"
        android:src="@drawable/init"
        android:layout_gravity="center"
        app:layout_constraintWidth_percent="0.51"
        app:layout_constraintHeight_percent="0.4"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.15"
        />

    <ImageView
        android:visibility="invisible"
        android:id="@+id/iv_fail_permission"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:padding="5dp"
        android:src="@drawable/error"
        android:layout_gravity="center"
        app:layout_constraintWidth_percent="0.51"
        app:layout_constraintHeight_percent="0.4"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.15"
        />

    <com.github.rahatarmanahmed.cpv.CircularProgressView
        android:visibility="invisible"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/progress_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintWidth_percent="0.3"
        app:layout_constraintHeight_percent="0.3"
        app:cpv_animAutostart="true"
        app:cpv_indeterminate="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageView
        android:visibility="invisible"
        android:id="@+id/iv_decorate_left"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/decorate_left"
        app:layout_constraintWidth_percent="0.22"
        app:layout_constraintHeight_percent="0.88"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <ImageView
        android:visibility="invisible"
        android:id="@+id/iv_decorate_heart"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/decorate_heart"
        app:layout_constraintWidth_percent="0.3"
        app:layout_constraintHeight_percent="0.03"
        app:layout_constraintLeft_toLeftOf="@+id/iv_head"
        app:layout_constraintRight_toRightOf="@+id/iv_head"
        app:layout_constraintTop_toBottomOf="@+id/iv_head"
        />

    <ImageView
        android:visibility="visible"
        android:id="@+id/iv_area_1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintWidth_percent="0.12"
        app:layout_constraintHeight_percent="0.1"
        app:layout_constraintDimensionRatio="H,1:1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/iv_head"
        app:layout_constraintVertical_bias="0.13"
        app:layout_constraintHorizontal_bias="0.73"
        />

    <ImageView
        android:visibility="visible"
        android:id="@+id/iv_area_2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintWidth_percent="0.12"
        app:layout_constraintHeight_percent="0.1"
        app:layout_constraintDimensionRatio="H,1:1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toEndOf="@+id/iv_area_1"
        android:layout_marginStart="10dp"
        app:layout_constraintTop_toTopOf="@+id/iv_head"
        />

    <ImageView
        android:visibility="visible"
        android:id="@+id/iv_area_3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintWidth_percent="0.12"
        app:layout_constraintHeight_percent="0.1"
        app:layout_constraintDimensionRatio="H,1:1"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="10dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_area_1"
        app:layout_constraintVertical_bias="0.2"
        app:layout_constraintHorizontal_bias="0.73"
        />

    <ImageView
        android:visibility="visible"
        android:id="@+id/iv_area_4"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintWidth_percent="0.12"
        app:layout_constraintHeight_percent="0.1"
        app:layout_constraintDimensionRatio="H,1:1"
        app:layout_constraintStart_toStartOf="@+id/iv_area_2"
        app:layout_constraintTop_toTopOf="@+id/iv_area_3"
        />

    <ImageView
        android:visibility="visible"
        android:id="@+id/iv_area_5"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintWidth_percent="0.12"
        app:layout_constraintHeight_percent="0.1"
        app:layout_constraintDimensionRatio="H,1:1"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="10dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_area_3"
        app:layout_constraintVertical_bias="0.2"
        app:layout_constraintHorizontal_bias="0.73"
        />

    <ImageView
        android:visibility="visible"
        android:id="@+id/iv_area_6"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintWidth_percent="0.12"
        app:layout_constraintHeight_percent="0.1"
        app:layout_constraintDimensionRatio="H,1:1"
        app:layout_constraintStart_toStartOf="@+id/iv_area_4"
        app:layout_constraintTop_toTopOf="@+id/iv_area_5"
        />
</androidx.constraintlayout.widget.ConstraintLayout>