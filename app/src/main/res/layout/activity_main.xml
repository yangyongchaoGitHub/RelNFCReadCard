<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_root"
    >

    <TextView
        android:id="@+id/main_tv_area"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:textColor="@color/bg_black"
        android:textSize="20dp"
        android:textStyle="bold"
        android:gravity="center|left"
        android:maxLength="50"
        android:layout_marginStart="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="1"
        app:layout_constraintHeight_percent="0.07"
        app:layout_constraintHorizontal_bias="0.02"
        app:layout_constraintVertical_bias="0.01"
        />

    <ImageView
        android:visibility="invisible"
        android:id="@+id/iv_head"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:padding="5dp"
        android:layout_gravity="center"
        app:layout_constraintWidth_percent="0.51"
        app:layout_constraintHeight_percent="0.4"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.16"
        />

    <TextView
        android:visibility="invisible"
        android:id="@+id/main_tv_name"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:textColor="@color/bg_black"
        android:textSize="30dp"
        android:textStyle="bold"
        android:gravity="center"
        android:maxLength="50"
        app:layout_constraintWidth_percent="1"
        app:layout_constraintHeight_percent="0.07"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_bias="0.02"
        app:layout_constraintVertical_bias="0.53"
        />

    <TextView
        android:visibility="invisible"
        android:id="@+id/main_tv_ename"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:textColor="@color/bg_black"
        android:textSize="30dp"
        android:textStyle="bold"
        android:gravity="center"
        android:maxLength="50"
        app:layout_constraintWidth_percent="1"
        app:layout_constraintHeight_percent="0.07"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_bias="0.02"
        app:layout_constraintVertical_bias="0.61"
        />

    <TextView
        android:visibility="invisible"
        android:id="@+id/main_tv_group"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:textColor="@color/bg_black"
        android:textSize="30dp"
        android:textStyle="bold"
        android:gravity="center"
        app:layout_constraintWidth_percent="1"
        app:layout_constraintHeight_percent="0.07"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_bias="0.02"
        app:layout_constraintVertical_bias="0.69"
        />

    <TextView
        android:visibility="invisible"
        android:id="@+id/main_tv_companytitle"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:textColor="@color/bg_black"
        android:textSize="30dp"
        android:textStyle="bold"
        android:gravity="center"
        app:layout_constraintWidth_percent="1"
        app:layout_constraintHeight_percent="0.07"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_bias="0.02"
        app:layout_constraintVertical_bias="0.76"
        />

    <TextView
        android:id="@+id/main_tv_timeorpermission"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:textColor="@color/bg_black"
        android:textSize="18dp"
        android:textStyle="bold"
        android:gravity="center"
        app:layout_constraintWidth_percent="1"
        app:layout_constraintHeight_percent="0.07"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_bias="0.02"
        app:layout_constraintVertical_bias="0.842"
        />

    <ImageView
        android:visibility="invisible"
        android:id="@+id/iv_success"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:padding="5dp"
        android:src="@drawable/success"
        android:layout_gravity="center"
        app:layout_constraintWidth_percent="0.2"
        app:layout_constraintHeight_percent="0.12"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.99"
        />

    <ImageView
        android:id="@+id/iv_fail"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:padding="5dp"
        android:src="@drawable/error"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHeight_percent="0.12"
        app:layout_constraintHorizontal_bias="0.252"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.99"
        app:layout_constraintWidth_percent="0.2" />

    <TextView
        android:visibility="invisible"
        android:id="@+id/main_tv_permissionfail"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:textColor="@color/bg_black"
        android:textSize="20dp"
        android:textStyle="bold"
        android:gravity="center"
        android:text="@string/permissionfail"
        app:layout_constraintWidth_percent="0.5"
        app:layout_constraintBottom_toBottomOf="@+id/iv_fail"
        app:layout_constraintStart_toEndOf="@+id/iv_fail"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/iv_fail"
        app:layout_constraintHorizontal_bias="0.02"
        app:layout_constraintVertical_bias="0.842"
        />

    <TextView
        android:id="@+id/main_tv_init_left"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:textColor="@color/bg_black"
        android:textSize="40dp"
        android:textStyle="bold"
        android:gravity="center"
        android:maxLength="50"
        android:text="@string/scan_card"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="1"
        app:layout_constraintHeight_percent="0.1"
        app:layout_constraintHorizontal_bias="0.02"
        app:layout_constraintVertical_bias="0.65"
        />

    <ImageView
        android:id="@+id/iv_init"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:padding="5dp"
        android:src="@drawable/init"
        android:layout_gravity="center"
        app:layout_constraintWidth_percent="0.51"
        app:layout_constraintHeight_percent="0.4"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.15"
        />

    <ImageView
        android:visibility="invisible"
        android:id="@+id/iv_fail_permission"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:padding="5dp"
        android:src="@drawable/error"
        android:layout_gravity="center"
        app:layout_constraintWidth_percent="0.51"
        app:layout_constraintHeight_percent="0.4"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.15"
        />

    <com.github.rahatarmanahmed.cpv.CircularProgressView
        android:visibility="invisible"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/progress_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintWidth_percent="0.3"
        app:layout_constraintHeight_percent="0.3"
        app:cpv_animAutostart="true"
        app:cpv_indeterminate="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>